<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">

    <h1 class="text-center text-3xl font-bold">Agregar Paciente</h1>
    
    <form action="" method="POST" class="mt-4">
        
        <label for="nss">N.S.S.</label>
        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="nss">

        <label for="medicamento">Medicamentos</label>
        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="medicamentos">

        <label for="registro">Fecha de Registro</label>
        <input type="date" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="registro">

        <label for="receta">Fecha de Receta</label>
        <input type="date" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="receta">

        <label for="estatus">Estatus</label>
        <select name="Estatus" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="estatus">
            <option value=""></option>
            <option value="ENTREGADO">ENTREGADO</option>
            <option value="PENDIENTE">PENDIENTE</option></select>
        
        <label for="nombre">Nombre del Paciente</label>
        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" style="text-transform:uppercase;" value=""  onkeyup="javascript:this.value=this.value.toUpperCase();" name="nombre">

        <label for="cantidad">Cantidad</label>
        <input type="number" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="cantidad">

        <label for="folio">Folio de Receta</label>
        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="folio">

        <label for="telefono">Tel√©fono</label>
        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="telefono">

        <label for="anotaciones">Anotaciones</label>
        <textarea class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white h-40" placeholder="" style="text-transform:uppercase;" value=""  onkeyup="javascript:this.value=this.value.toUpperCase();" name="anotaciones"></textarea>

        <label for="turno">Turno</label>
        <select name="Turno" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="" name="turno">
            <option value="">Turno</option>
            <option value="MATUTINO">MATUTINO</option>
            <option value="VESPERTINO">VESPERTINO</option></select>

        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Agregar</button>
    
    </form>

</div>